{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["es2017", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "lib/",
		"resolveJsonModule": true,
		"rootDir": "./source",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"target": "es2015",
		"typeRoots": ["types", "node_modules/@types"]
	},
	"exclude": ["./node_modules", "./jest", "**/*.js"],
	"include": ["**/*.ts", "**/*.d.ts"]
}
